{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Create a new escalation",
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Sorry to hear that you're having an issue! Please fill out the information on this card to proceed.",
            "isSubtle": true,
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "Note: At this time, only national partners are supported via this tool.",
            "wrap": true,
            "isSubtle": true
        },
        {
            "type": "TextBlock",
            "text": "Theatre",
            "id": "label"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Americas",
                    "value": "Americas"
                },
                {
                    "title": "EMEAR",
                    "value": "EMEAR"
                },
                {
                    "title": "APJ",
                    "value": "APJ"
                }
            ],
            "placeholder": "Choose a theatre...",
            "id": "choices"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "action": "sub_theatre"
            }
        }
    ]
}